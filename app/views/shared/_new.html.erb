<ul class="breadcrumb">
  <li>
    <%= link_to(plural_resource, collection_path) %> <span class="divider">/</span>
  </li>
  <li class="active">
    <strong>New <%= singular_resource %></strong>
  </li>
</ul>

<%= simple_form_for resource, :url => collection_path, :html => { :multipart => true } do |form| %>
  <%= render :partial => 'form', :locals => { :form => form } %>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Save</button>
    <%= link_to("Cancel", collection_path, :class => 'btn') %>
  </div>
<% end %>
